    <%= f.label :model %><br />
    <%= f.text_field :model %>
  </div>
  <div class="field">
    <%= f.label :tires %><br />
    <%= f.number_field :tires %>
  </div>
  <div class="field">
    <%= f.label :wrecked %><br />
    <%= f.check_box :wrecked %>
  </div>
  <div class="field">
    <%= f.label :zombie_id %><br />
    <%= f.select :zombie_id, Zombie.all.collect { |c| [c.name, c.id] } %>
